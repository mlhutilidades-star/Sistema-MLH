# Database
DATABASE_URL="postgresql://user:password@localhost:5432/sistema_mlh?schema=public"

# Tiny ERP v3
TINY_API_KEY="seu_token_tiny_aqui"
TINY_BASE_URL="https://api.tiny.com.br/api/v3"

# Shopee Open API v2
SHOPEE_PARTNER_ID="seu_partner_id_aqui"
SHOPEE_PARTNER_KEY="sua_partner_key_aqui"
SHOPEE_SHOP_ID="seu_shop_id_aqui"
SHOPEE_BASE_URL="https://partner.shopeemobile.com/api/v2"

# Shopee Webhooks (Push Mechanism)
SHOPEE_WEBHOOK_SECRET=""
SHOPEE_WEBHOOK_SIGNATURE_HEADER="x-shopee-signature"
SHOPEE_WEBHOOK_TIMESTAMP_HEADER="x-shopee-timestamp"
SHOPEE_WEBHOOK_NONCE_HEADER="x-shopee-nonce"
SHOPEE_WEBHOOK_SIGNATURE_MODE="template"
SHOPEE_WEBHOOK_SIGNATURE_TEMPLATE='${partner_id}${path}${timestamp}${body}'
SHOPEE_WEBHOOK_SIGNATURE_ENCODING="hex"
SHOPEE_WEBHOOK_MAX_SKEW_SEC=300
SHOPEE_WEBHOOK_REQUIRE_TIMESTAMP=true
SHOPEE_WEBHOOK_ALLOW_UNSIGNED=false
SHOPEE_WEBHOOK_WORKER_ENABLED=true
SHOPEE_WEBHOOK_WORKER_INTERVAL_MS=5000
SHOPEE_WEBHOOK_WORKER_BATCH_SIZE=10
SHOPEE_WEBHOOK_WORKER_MAX_ATTEMPTS=5
SHOPEE_WEBHOOK_WORKER_FAIL_BACKOFF_MS=30000
SHOPEE_WEBHOOK_PROCESSING_TIMEOUT_MS=600000
SHOPEE_WEBHOOK_FETCH_MODELS=true

# JWT Secret
JWT_SECRET="sua_chave_secreta_jwt_aqui_gere_com_openssl"

# Server
PORT=3000
NODE_ENV="development"

# Sync Settings
SYNC_INTERVAL_HOURS=4
SYNC_AUTO_START=true
